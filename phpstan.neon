parameters:
    level: max
    paths:
        - src
    treatPhpDocTypesAsCertain: false
    reportUnmatchedIgnoredErrors: false

    # Bootstrap files to load Laravel and application dependencies
    bootstrapFiles:
        - vendor/autoload.php

    # Scan vendor directory for better type inference
    scanDirectories:
        - vendor

    # Universal object crates - helps with magic methods
    universalObjectCratesClasses:
        - Illuminate\Database\Eloquent\Model
        - Illuminate\Http\Request

    # Paths to exclude from analysis
    excludePaths:
        - src/resources/views/*
        - src/database/migrations/deprecated/*

    # Error suppression for unavoidable issues
    ignoreErrors:
        # Keep empty for now; prefer fixing types at source
