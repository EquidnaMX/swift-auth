includes:
    # This configuration requires Larastan to be installed
    # Install with: composer require --dev larastan/larastan
    # - vendor/larastan/larastan/extension.neon

parameters:
    level: 5
    paths:
        - src
    
    # Bootstrap files to load Laravel and application dependencies
    bootstrapFiles:
        - vendor/autoload.php
    
    # Treat PHP 8.2 as baseline
    phpVersion: 80200
    
    # Check for missing typehints
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    
    # Paths to exclude from analysis
    excludePaths:
        - src/resources/views/*
        - src/database/migrations/*
    
    # Error suppression for external dependencies
    ignoreErrors:
        # Ignore all errors related to missing external toolkit dependency
        - '#Equidna\\Toolkit\\#'
        
        # These should be resolved by Larastan, but kept as fallback
        - '#Variable .* in isset\(\) always exists#'
